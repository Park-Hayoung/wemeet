<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_user_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_user_info_gradient"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:id="@+id/linearLayout_age_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView_introduce"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/textView_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6sp"
                android:text="27세"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/light"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6sp"
                android:text="핸섬한 박하영"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/textView_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="6sp"
            android:text="한 줄 소개입니다."
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>

</RelativeLayout>