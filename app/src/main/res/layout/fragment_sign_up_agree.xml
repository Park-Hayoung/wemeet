<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.SignUpAgreeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="이메일 가입"
        android:textSize="14sp"
        android:textColor="#4f4f4f"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="21sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="닉네임"
        android:textSize="14sp"
        android:textColor="#4f4f4f"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="21sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/editText_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@android:color/transparent"
        android:fontFamily="@font/bold"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="17sp"
        android:inputType="textPersonName"
        android:hint="기분좋은 바람이 후~"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="이메일"
        android:textSize="14sp"
        android:textColor="#4f4f4f"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="21sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@android:color/transparent"
        android:fontFamily="@font/bold"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="17sp"
        android:inputType="textEmailAddress"
        android:hint="example@never.com"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="비밀번호"
        android:textSize="14sp"
        android:textColor="#4f4f4f"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="21sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"/>

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@android:color/transparent"
        android:fontFamily="@font/bold"
        android:textColorHint="#000000"
        android:textSize="18sp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="17sp"
        android:inputType="textPassword"
        android:hint="mot_de_passe"
        android:focusable="false"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <CheckBox
            android:id="@+id/checkBox_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:button="@drawable/selector_checkbox"
            android:checked="false"
            android:fontFamily="@font/bold"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="21sp"
            android:text="서비스 이용 동의*"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            android:paddingStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/bold"
            android:text="(필수)"
            android:textSize="14sp"
            android:textColor="#d2d2d2"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="21sp"
            android:layout_marginEnd="24dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp">

        <CheckBox
            android:id="@+id/checkBox_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="24dp"
            android:button="@drawable/selector_checkbox"
            android:checked="false"
            android:fontFamily="@font/bold"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="21sp"
            android:text="알림서비스 이용 동의"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            android:paddingStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/bold"
            android:text="(필수)"
            android:textSize="14sp"
            android:textColor="#d2d2d2"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="21sp"
            android:layout_marginEnd="24dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_rect_gray"
        android:fontFamily="@font/bold"
        android:text="다음"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"
        android:layout_marginTop="118dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:stateListAnimator="@null"/>

</LinearLayout>